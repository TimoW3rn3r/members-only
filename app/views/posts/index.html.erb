<h1>Posts</h1>

<% @posts.each do |post| %>
  <h3><%= post.title %></h1>
  <% if user_signed_in? %>
    <div>
      - <%= post.user.first_name %> <%= post.user.last_name %>
    </div>
  <% end %>
  <p><%= post.body %></p>
<% end %>

<%= link_to "New Post", new_post_path %>

<footer>
  <% if user_signed_in? %>
    Signed in as <%= current_user.first_name %> <%= current_user.last_name %>(<%= link_to "Sign out", destroy_user_session_path, data: { "turbo-method": :delete } %>)
  <% else %>
      <%= link_to "Login", new_user_session_path %>
    <% end %>
</footer>
